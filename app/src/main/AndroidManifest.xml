<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".models.UserData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="My Shop"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginRegister">
        <activity android:name=".activities.OneProductActivity"></activity>
        <activity
            android:name=".activities.ProductsActivity"
            android:label="@string/title_activity_products" />
        <activity
            android:name=".activities.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="My Shop"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddProductActivity"
            android:label="Add Product" />
        <activity
            android:name=".activities.EditActivity"
            android:label="Edit Profile" />
        <activity
            android:name=".activities.CategoriesActivity"
            android:label="Categories" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="YourProfile" />
    </application>

</manifest>